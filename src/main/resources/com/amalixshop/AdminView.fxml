<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.amalixshop.controllers.AdminController"
      spacing="10"
      prefWidth="900"
      prefHeight="650">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Admin Dashboard"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>

    <Separator/>

    <!-- Tab Container -->
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">

        <!-- TAB 1: Category Management -->
        <Tab text="Category Management">
            <VBox spacing="15">
                <Label text="Category Management"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints prefWidth="300"/>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints prefWidth="300"/>
                    </columnConstraints>

                    <!-- Row 1 -->
                    <Label text="Category Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="categoryNameField" promptText="Enter category name"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <!-- Row 2 -->
                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextArea fx:id="categoryDescField" promptText="Enter description"
                              prefRowCount="3" wrapText="true"
                              GridPane.rowIndex="1" GridPane.columnIndex="1"
                              GridPane.columnSpan="3"/>
                </GridPane>

                <!-- Category Action Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Add Category" onAction="#handleAddCategory"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    <Button text="Update Category" onAction="#handleUpdateCategory"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                    <Button text="Delete Category" onAction="#handleDeleteCategory"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                    <Button text="Clear Form" onAction="#handleClearCategoryForm"/>
                </HBox>

                <!-- Categories Table -->
                <Label text="Categories List" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="ID" prefWidth="50">
                            <cellValueFactory>
                                <PropertyValueFactory property="categoryId"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Name" prefWidth="200">
                            <cellValueFactory>
                                <PropertyValueFactory property="categoryName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Description" prefWidth="300">
                            <cellValueFactory>
                                <PropertyValueFactory property="description"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- TAB 2: Product Management -->
        <Tab text="Product Management">
            <VBox spacing="15">
                <Label text="Product Management"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="120"/>
                        <ColumnConstraints prefWidth="300"/>
                        <ColumnConstraints prefWidth="120"/>
                        <ColumnConstraints prefWidth="300"/>
                    </columnConstraints>

                    <!-- Row 1 -->
                    <Label text="Product Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="productNameField" promptText="Enter product name"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Category:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <ComboBox fx:id="categoryComboBox" promptText="Select category"
                              prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                    <!-- Row 2 -->
                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextArea fx:id="productDescField" promptText="Enter description"
                              prefRowCount="3" wrapText="true"
                              GridPane.rowIndex="1" GridPane.columnIndex="1"
                              GridPane.columnSpan="3"/>

                    <!-- Row 3 -->
                    <Label text="Price ($):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="priceField" promptText="0.00"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Row 4: Stock Quantity -->
                    <Label text="Initial Stock:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="stockField" promptText="0"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <!-- Product Action Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Add Product" onAction="#handleSaveProduct"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    <Button text="Update Product" onAction="#handleUpdateProduct"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                    <Button text="Delete Product" onAction="#handleDeleteProduct"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                    <Button text="Clear Form" onAction="#handleClearProductForm"/>
                </HBox>

                <!-- Products Table -->
                <Label text="Products List" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="productsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="ID" prefWidth="50">
                            <cellValueFactory>
                                <PropertyValueFactory property="productId"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Name" prefWidth="200">
                            <cellValueFactory>
                                <PropertyValueFactory property="productName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Description" prefWidth="300">
                            <cellValueFactory>
                                <PropertyValueFactory property="description"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Category" prefWidth="150">
                            <cellValueFactory>
                                <PropertyValueFactory property="categoryName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Price" prefWidth="80">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

    </TabPane>

</VBox>