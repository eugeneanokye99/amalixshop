<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.amalixshop.controllers.CartController"
      spacing="10"
      prefWidth="1200"
      prefHeight="700"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="ðŸ›’ AmaliXShop Cart" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="â† Continue Shopping" onAction="#handleBackToDashboard"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 15;"/>
    </HBox>

    <!-- Main Content -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Left Column - Cart Items -->
        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <!-- Cart Header -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="cartTitleLabel" text="Shopping Cart (0 items)"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="clearCartButton" text="ðŸ—‘ï¸ Clear Cart" onAction="#handleClearCart"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 15;"/>
            </HBox>

            <!-- Status Message -->
            <Label fx:id="messageLabel" text=""
                   style="-fx-font-size: 14px; -fx-padding: 8; -fx-background-color: #e8f4f8; -fx-background-radius: 4;"/>

            <!-- Empty Cart View -->
<!--            <VBox fx:id="emptyCartView" alignment="CENTER" spacing="20" visible="false"-->
<!--                  style="-fx-padding: 40; -fx-background-color: white; -fx-background-radius: 8;">-->
<!--                <Label text="ðŸ›’" style="-fx-font-size: 64px;"/>-->
<!--                <Label text="Your cart is empty"-->
<!--                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>-->
<!--                <Label text="Add items to get started with shopping"-->
<!--                       style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>-->
<!--                <Button text="Browse Products" onAction="#handleBackToDashboard"-->
<!--                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 4; -fx-padding: 10 30;"/>-->
<!--            </VBox>-->

            <!-- Cart Items Container -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                <VBox fx:id="itemsContainer" spacing="10"/>
            </ScrollPane>
        </VBox>

        <!-- Right Column - Order Summary -->
        <VBox spacing="15" prefWidth="350"
              style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <Label text="Order Summary"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Separator style="-fx-background-color: #e0e0e0;"/>

            <!-- Cart Summary -->
            <VBox fx:id="cartSummary" spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Items:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalItemsLabel" text="0"
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Subtotal:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="subtotalLabel" text="â‚µ0.00"
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Shipping:" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="shippingLabel" text="â‚µ0.00"
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>

                <Separator style="-fx-background-color: #e0e0e0;"/>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Total:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalLabel" text="â‚µ0.00"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                </HBox>

                <Separator style="-fx-background-color: #e0e0e0;"/>

                <!-- Checkout Button -->
                <Button text="Proceed to Checkout" onAction="#handleCheckout" prefHeight="50"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 4;"/>

                <!-- Continue Shopping Button -->
                <Button text="Continue Shopping" onAction="#handleBackToDashboard" prefHeight="40"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 4;"/>

                <!-- Security Note -->
                <Label text="ðŸ”’ Secure checkout"
                       style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-alignment: CENTER;"/>
            </VBox>
        </VBox>
    </HBox>

</VBox>