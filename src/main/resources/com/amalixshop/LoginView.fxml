<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.amalixshop.controllers.LoginController"
      spacing="10"
      alignment="CENTER"
      prefWidth="400"
      prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Login to AmaliXShop" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Welcome back! Please login to continue"/>

    <TextField fx:id="emailField" promptText="Email Address" prefWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>

    <HBox spacing="10">
        <Button text="Login" onAction="#handleLogin"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>

    <Separator prefWidth="300"/>

    <Label text="New to AmaliXShop?"/>
    <Button text="Create New Account" onAction="#handleCreateAccount"/>

</VBox>