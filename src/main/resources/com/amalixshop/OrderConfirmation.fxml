<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.amalixshop.controllers.OrderConfirmationController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            style="-fx-background-color: #f5f5f5;">

    <VBox spacing="20"
          prefWidth="1000"
          alignment="TOP_CENTER"
          style="-fx-background-color: #f5f5f5;">

        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Success Icon - Using Pane instead of Circle -->
        <StackPane>
            <Pane prefWidth="120" prefHeight="120" style="-fx-background-color: #2ecc71; -fx-background-radius: 60;"/>
            <Label text="âœ“" style="-fx-font-size: 48px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </StackPane>

        <!-- Success Message -->
        <VBox spacing="10" alignment="CENTER">
            <Label text="Order Confirmed!"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="orderIdLabel" text="Order ID: #000000"
                   style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;"/>
            <Label text="Thank you for your purchase!"
                   style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
        </VBox>

        <!-- Order Details Card -->
        <VBox spacing="15" prefWidth="700"
              style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-border-width: 1;">

            <Label text="Order Summary"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Separator style="-fx-background-color: #e0e0e0;"/>

            <!-- Order Items -->
            <VBox fx:id="orderItemsContainer" spacing="15" style="-fx-padding: 10 0;">
                <!-- Items will be dynamically added here -->
            </VBox>

            <Separator style="-fx-background-color: #e0e0e0;"/>

            <!-- Order Totals -->
            <GridPane hgap="20" vgap="10" style="-fx-padding: 10 0;">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="200"/>
                    <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                </columnConstraints>

                <Label text="Subtotal:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                <Label fx:id="subtotalLabel" text="â‚µ0.00" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <Label text="Shipping:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                <Label fx:id="shippingLabel" text="FREE" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <Separator GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"
                           style="-fx-background-color: #e0e0e0; -fx-padding: 5 0;"/>

                <Label text="Total:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="totalLabel" text="â‚µ0.00" GridPane.rowIndex="3" GridPane.columnIndex="1"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
            </GridPane>
        </VBox>

        <!-- Shipping Information -->
        <HBox spacing="30" alignment="CENTER">
            <VBox spacing="10" prefWidth="300" alignment="TOP_LEFT"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-border-width: 1;">
                <Label text="Shipping Address"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="shippingAddressLabel" text="Loading..." wrapText="true"
                       style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-padding: 5 0;"/>
            </VBox>

            <VBox spacing="10" prefWidth="300" alignment="TOP_LEFT"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-border-width: 1;">
                <Label text="Payment Method"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="paymentMethodLabel" text="Loading..."
                       style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-padding: 5 0;"/>
                <Label fx:id="paymentStatusLabel" text="Pending"
                       style="-fx-font-size: 12px; -fx-text-fill: #f39c12; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <!-- Estimated Delivery -->
        <VBox spacing="10" prefWidth="700" alignment="CENTER"
              style="-fx-background-color: #e8f4f8; -fx-padding: 20; -fx-background-radius: 8;">
            <HBox spacing="10" alignment="CENTER">
                <Label text="ðŸ“¦" style="-fx-font-size: 24px;"/>
                <Label text="Estimated Delivery"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </HBox>
            <Label fx:id="deliveryDateLabel" text="Within 3-5 business days"
                   style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="View Order Details" onAction="#handleViewOrderDetails"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 4; -fx-padding: 10 30;"/>

            <Button text="Continue Shopping" onAction="#handleContinueShopping"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 4; -fx-padding: 10 30;"/>
        </HBox>

        <!-- Support Information -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Need help with your order?"
                   style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            <Label text="ðŸ“ž Call us: +233 123 456 789 | âœ‰ï¸ Email: support@amalixshop.com"
                   style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
        </VBox>

    </VBox>

</ScrollPane>