<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      alignment="CENTER"
      prefWidth="400"
      prefHeight="500"
      fx:controller="com.amalixshop.controllers.RegisterController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Customer Registration" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Full Name" prefWidth="300"/>
    <TextField fx:id="emailField" promptText="Email Address" prefWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>
    <TextField fx:id="phoneField" promptText="Phone Number" prefWidth="300"/>
    <TextArea fx:id="addressField" promptText="Address" prefWidth="300" prefHeight="80"/>

    <HBox spacing="10">
        <Button text="Register" onAction="#handleRegister"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Clear" onAction="#handleClear"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>

</VBox>